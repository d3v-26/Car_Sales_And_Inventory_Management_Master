@model IEnumerable<Car_Sales_And_Inventory_Management_Master.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.emp_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.emp_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.position)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.emp_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.emp_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.emp_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
